<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_fragment_layout"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/word_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="6dp"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/pronunciation_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/word_txt_view"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="36dp"
        android:textStyle="italic"
        android:freezesText="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/translation_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/word_txt_view"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="24dp"
        android:overScrollMode="never"/>

</RelativeLayout>